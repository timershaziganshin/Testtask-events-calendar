<%= form_for(@event) do |f| %>
  <div class="namefield">
    <%= f.label :name, 'Event name' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.text_field :date, :id => 'datepicker', :readonly => true, :value => (@event.date.nil? ? Date.today : @event.date) %>
  </div>
  <div class="select">
    <%= f.label :period %><br/>
    <%= f.select :period, [['No period', 0], ['Daily', 1], ['Weekly', 2], ['Monthly', 3], ['Yearly', 4]] %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn' %>
  </div>
<% end %>
