<h1>Login</h1>

<p id="notice"> <%= multiline_notice(notice) %> </p>

<%= form_for(@user, :url => '/login') do |f| %>
  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit 'Login' %>
  </div>
<% end %>

<%= link_to 'Register', register_path %>
